<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <TextView
            android:id="@+id/booking_date_time"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:text="01 May, 2022 | 02:25 PM-03:15  PM "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/vehicle_type_ico"
            android:layout_width="84dp"
            android:layout_height="74dp"
            android:layout_alignBottom="@+id/booking_curr_status"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="301dp"
            android:layout_marginBottom="-32dp"
            app:srcCompat="@drawable/electric_bike" />

        <TextView
            android:id="@+id/booking_curr_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="85dp"
            android:background="@drawable/border_textview"
            android:text="Status"
            android:textAlignment="center"
            android:textColor="#054741" />

        <TextView
            android:id="@+id/lbl_station_name"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="184dp"
            android:text="Charger Name" />

        <TextView
            android:id="@+id/station_name"
            android:layout_width="192dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="182dp"
            android:text="ygm,bhosari , pune"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_amount_paid"
            android:layout_width="175dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="0dp"
            android:text="Amount Paid" />

        <TextView
            android:id="@+id/total_paid_amount"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="224dp"
            android:layout_marginTop="149dp"
            android:layout_marginEnd="13dp"
            android:text="Rs. 12.72"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>